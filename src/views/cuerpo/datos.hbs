<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <title>Side Navigation Bar</title>
    <link rel="stylesheet" href="/public/css/styles2.css" />
    <script src="https://use.fontawesome.com/c260569ce0.js"></script>

  </head>

  <body>

   
        <div class="container p-4">
          <div class="row">

        <div class="col-md-4">
          <div id="infopersonal" class="card">
        <div class="card-header bg-success">
          <h3 class="card-title text-white">
           <i class="far fa-id-card"></i> Carga de Información
          </h3>
        </div>
        <div class="card-body">




          <div class="container">
            Desea agregar información?&nbsp; 
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
            <i class="fa fa-plus" aria-hidden="true"></i> Agregar
            </button>

            <!-- The Modal -->
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
              aria-hidden="true">
              <div class="modal-dialog">
                <div class="modal-content">

                  <!-- Modal Header -->
                  <div class="modal-header">
                    <h4 class="modal-title">Complete la Información</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                  </div>

                  <!-- Modal body -->
                  <div class="modal-body">
                    <form action="/users/info" method="POST" align="left">
                      <div class="form-group row">
                         <label class="col-sm-3 col-form-label" for="start">F. Nacimiento:</label>
                         <div class="col-sm-9">
                            <input type="date" id="start" name="fechanacimiento" class="form-control" value="dd-mm-aa"
                          min="1950-01-01" max="2100-12-31" required>
                         </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="start">Nacionalidad: </label>
                        <div class="col-sm-9">
                           <input type="text" onkeypress="return soloLetras(event)" autocomplete="off" name="nacionalidad" class="form-control"
                          placeholder="Ingrese su nacionalidad" required>
                        </div>
                      </div>
                      <div class="form-group row">
                         <label class="col-sm-3 col-form-label" for="start">Teléfono: </label>
                         <div class="col-sm-9">
                            <input type="text" onkeypress="return soloNumeros(event)" autocomplete="off" name="telefono" class="form-control"
                          placeholder="Ingrese su número de teléfono" required>
                         </div>
                      </div>
                      <div class="form-group row">
                         <label class="col-sm-3 col-form-label" for="start">Descripción: </label>
                        <div class="col-sm-9">
                          <input type="text" onkeypress="return soloLetras(event)" autocomplete="off" name="detalles" class="form-control"
                          placeholder="Como se describe " required>
                        </div>
                      </div>
                      <div class="form-group row">
                         <label class="col-sm-3 col-form-label" for="start">Universidad: </label>
                         <div class="col-sm-9">
                            <input type="text" onkeypress="return soloLetras(event)" autocomplete="off" name="universidad" class="form-control"
                          placeholder="Ingrese el nombre de su Universidad" required>
                         </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="start">Carrera: </label>
                        <div class="col-sm-9">
                           <select name="carrera" class="form-control" id="sel1">
                            <option value="Sistemas Computacionales">Sistemas Computacionales</option>
                            <option value="Mecatronica">Mecatrónica</option>
                            <option value="Telecomunicaciones">Telecomonicaciones</option>
                            <option value="Electrónica y Redes">Electrónica y Redes</option>
                            <option value="Industrial">Industrial</option>
                            <option value="Textiles">Textiles</option>
                            <option value="Textiles">Electricidad</option>
                            <option value="Mecanica Automotriz">Mecánica Automotriz</option>
                        </select>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label class="col-sm-3 col-form-label" for="start">Sexo: </label>
                        <div class="col-sm-9">
                          <select name="sexo" class="form-control" id="sel1">
                            <option value="Masculino">Masculino</option>
                            <option value="Femenino">Femenino</option>
                            <option value="Personalizado">Personalizado</option>
                        </select>
                        </div>
                      </div>
                      <div class="form-group" align="right">
                        <button class="btn btn-success">
                          <i class="fa fa-floppy-o"></i>&nbsp;  Guardar
                        </button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">
                         <i class="fa fa-times"></i>&nbsp;  Cerrar
                        </button>
                      </div>
                    </form>
                  </div>

                </div>
              </div>
            </div>

          </div>







        </div>

      </div>
        </div>

      <br>
      <br>
      <div class="col-md-8">
        <div id="infopersonal" class="card">
        <div class="card-header bg-success">
          <h3 class="card-title text-white">
            <i class="far fa-id-card"></i> Información
          </h3>
        </div>


        <div class="card-body" align="left">

          {{#each datospersonas}}

          <div class="form-group row">
             <label class="col-sm-2 col-form-label">Fecha de Nacimiento: </label>
             <div class="col-sm-4">
                <input type="text" name="fechanacimiento" class="form-control" placeholder="{{fechanacimiento}}"
              disabled>
             </div>
             <label class="col-sm-2 col-form-label">Nacionalidad: </label>
           <div class="col-sm-4">
             <input type="text" name="nacionalidad"  class="form-control" placeholder="{{nacionalidad}} "
              disabled>
           </div>
          </div>
          <div class="form-group row">
             <label class="col-sm-2 col-form-label">Teléfono: </label>
            <div class="col-sm-10">
              <input type="text" name="telefono" class="form-control" placeholder=" {{telefono}}" disabled>
            </div>
          </div>
          <div class="form-group row">
             <label class="col-sm-2 col-form-label">Descripción:</label>
             <div class="col-sm-10">
               <input type="text" name="detalles" class="form-control" placeholder="{{detalles}}" disabled>
             </div>
          </div>
          <div class="form-group row">
             <label class="col-sm-2 col-form-label"> Universidad: </label>
          <div class="col-sm-4">
             <input type="text" name="fechanacimiento" class="form-control" placeholder="{{universidad}}"
              disabled>
          </div>
        
              <label class="col-sm-2 col-form-label">Carrera: </label>
             <div class="col-sm-4">
               <input type="text" name="nacionalidad" class="form-control" placeholder="{{carrera}} " disabled>
             </div>
          </div>
          <div class="form-group row">
            <label class="col-sm-2 col-form-label">Sexo: </label>
            <div class="col-sm-10">
              <input type="text" name="sexo" class="form-control" placeholder="{{sexo}}" disabled>
            </div>
          </div>

           <div class="nav-item" align="right">
              <a  class="btn btn-success" href="/users/editar/{{_id}}"><i class="fa fa-pencil-square-o" aria-hidden="true"></i> Editar</a>
             </div>
        </div>

          {{/each}}

            
       
      </div>

      </div>





          </div> 
        </div>
   
  </body>
</html>