<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Side Navigation Bar</title>
	<link rel="stylesheet" href="/public/css/styles2.css">
  <link rel="stylesheet" href="/public/css/maquetacion.css">
  <script src="https://use.fontawesome.com/c260569ce0.js"></script>

</head>
<body>

<div class="wrapper">
  
    <div class="main_content">
        

<br>

<div id="verificar" class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
       <h2>{{image.title}}</h2>
        <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
            <i class="fa fa-times"></i> Borrar
        </button>
    </div>
    <div class="card-body">
    <p>{{image.description}}</p>
    <div class="text-center">
        <img src="/public/upload/{{image.filename}}" class="img-fluid">
    </div>
 </div>
    <div class="card-footer  d-flex justify-content-between align-items-center">
        <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
            <i class="fa fa-thumbs-up"></i>Like
        </button>
        <p>
            <span class="likes-count" >{{image.likes}}</span>
            <i class="fa fa-heart" aria-hidden="true"></i>
        </p>
        <p>
            <i class="fa fa-eye"></i>{{image.views}}
        </p>
        <p>
           <i class="fa fa-clock-o" aria-hidden="true"></i> {{timeago image.timestamp}}
        </p>
    </div>
</div>

   <div id="comentar" class="card mt-2">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h3>Comentarios</h3>
        <button class="btn btn-info" id="btn-toggle-comment">
          <i class="fa fa-comment-o"></i> Postea un comentario
        </button>
      </div>
      <div class="card-body">
        <blockquote id="post-comment">
          <form action="/images/{{image.uniqueId}}/comment" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="email" placeholder="Email">
            </div>
            <div class="form-group">
              <textarea name="comment" rows="2" class="form-control" placeholder="Tu comentario"></textarea>
            </div>
            <div class="form-group">
              <button class="btn btn-success" id="btn-comment">
                <i class="fa fa-comment"></i> Publicar
              </button>
            </div>
          </form>
        </blockquote>
        <ul class="list-group p-4">
            {{#each comment}}
              <li class="list-group-item">
                  <div class="row">
                    <a href="#" class="col text-center">
                      <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
                    </a>
                    <blockquote id="comentario" class="col">
                      <p class="lead">{{comment}}</p>
                      <br>
                      <footer>
                        {{email}} - {{timeago timestamp}}
                      </footer>
                    </blockquote>
                  </div>
              </li>
            {{/each}}
        </ul>
      </div>
   </div> 
      







    </div>
</div>

</body>
</html>