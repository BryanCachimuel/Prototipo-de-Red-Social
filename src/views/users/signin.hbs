

    <div class="container">

      <div class="col-md-6 mx-auto">
        <div class="card mt-5">
          <div class="p-5">
            <div class="text-center">
              <h1 class="text-gray-900 mb-4"><strong>Iniciar Sessión</strong></h1>
            </div>
            <form class="user" action="/users/signin" method="POST">
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i
                      class="fa fa-envelope"
                      aria-hidden="true"
                    ></i></span>
                </div>
                <input
                  type="email"
                  class="form-control"
                  name="email"
                  placeholder="email"
                />
              </div>
              <div class="input-group form-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i
                      class="fa fa-unlock-alt"
                      aria-hidden="true"
                    ></i></span>
                </div>
                <input
                  type="password"
                  class="form-control"
                  name="password"
                  placeholder="password"
                />
              </div>

              <button
                type="submit"
                class="btn btn-primary btn-lg btn-block round"
              >
                Iniciar Sesión
              </button>
              <hr />
            </form>
           
            <div class="text-center">
             <a href="/users/signup"> Si no tiene una Cuenta Registrese!</a>
            </div>

          </div>
        </div>
      </div>

    </div>
